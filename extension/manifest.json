{
  "manifest_version": 3,
  "name": "Karma (Vibe Check) - Steam Overlay",
  "version": "1.0.0",
  "description": "Displays Vibe Scores on Steam profiles and allows quick voting against toxicity.",
  "icons": {
    "16": "icons/karma16.png",
    "32": "icons/karma32.png",
    "128": "icons/karma128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://steamcommunity.com/id/*",
    "https://steamcommunity.com/profiles/*",
    "http://localhost:4000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://steamcommunity.com/id/*", "https://steamcommunity.com/profiles/*"],
      "js": ["contentScript.js"],
      "css": ["contentStyles.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/karma16.png",
      "32": "icons/karma32.png",
      "128": "icons/karma128.png"
    },
    "default_title": "Karma Vibe Check"
  }
}
