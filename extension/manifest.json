{
  "manifest_version": 3,
  "name": "CommSafe - Steam Player Safety",
  "version": "2.0.0",
  "description": "View player safety scores on Steam profiles. Know who you're playing with before the match starts.",
  "icons": {
    "16": "icons/karma16.png",
    "32": "icons/karma32.png",
    "128": "icons/karma128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://steamcommunity.com/id/*",
    "https://steamcommunity.com/profiles/*",
    "https://cskarma-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://steamcommunity.com/id/*", "https://steamcommunity.com/profiles/*"],
      "js": ["contentScript.js"],
      "css": ["contentStyles.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/karma16.png",
      "32": "icons/karma32.png",
      "128": "icons/karma128.png"
    },
    "default_title": "CommSafe Player Safety"
  }
}
